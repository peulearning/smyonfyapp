 {% extends 'base.html.twig' %}
 {% block title %}Relatório dos Abatidos{% endblock %}
 {% block body %}
 <div class="container mt-3 shadow-lg p-3 mb-5 bg-white rounded">
    <h1>Bovinos Abatidos</h1>
    <table class="table">
       <thead>
           <tr>
               <th scope="col">#</th>
               <th scope="col">Código</th>
               <th scope="col">Leite Produzido</th>
               <th scope="col">Ração</th>
               <th scope="col">Peso</th>
            </tr>
       </thead>
       <tbody>
      {% for bovinos in bovinos %}
      <tr>
          <td>{{bovinos.id}}</td>
           <td>{{bovinos.codigo}}</td>
            <td>{{bovinos.leite|number_format(2, ',', '.')}} Litros</td>
            <td>{{bovinos.racao|number_format(2, ',', '.')}} Kg</td>
            <td>{{bovinos.peso|number_format(2, ',', '.')}} Kg ( Arrobas )</td>
                {#} {% if bovinos.data_abatimento != null %}
                <td>Abatido</td>
                {% endif %}
          {#    <td>{{bovinoss.data_nascimento|date("Y-m-d")}}</td> #}
                {#<td>{{bovinoss.data_abatimento|date("Y-m-d")}}</td>#}
            </tr>
      {% endfor %}
      </tbody>

    </table>
  {% if bovinos is empty %}
       <div class="alert alert-primary" role="alert">Ainda não existem bovinos abatidos! </div>
    {% endif %}
    {{ knp_pagination_render (bovinos) }}
</div>

{% endblock %}