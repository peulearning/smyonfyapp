{% extends 'base.html.twig' %}

{% block title %}Bovinos{% endblock %}

{% block body %}
    <h1>Bovinos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bovino.id }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ bovino.codigo }}</td>
            </tr>
            <tr>
                <th>Leite</th>
                <td>{{ bovino.leite }}</td>
            </tr>
            <tr>
                <th>Racao</th>
                <td>{{ bovino.racao }}</td>
            </tr>
            <tr>
                <th>Peso</th>
                <td>{{ bovino.peso }}</td>
            </tr>
            <tr>
                <th>Data_nascimento</th>
                <td>{{ bovino.dataNascimento ? bovino.dataNascimento|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Data_abatimento</th>
                <td>{{ bovino.dataAbatimento ? bovino.dataAbatimento|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-dark"><a href="{{ path('app_bovinos_index') }}">Volte para a lista !</a><button>

    <button type="button" class="btn btn-warning"><a href="{{ path('app_bovinos_edit', {'id': bovino.id}) }}">Edite o Gado !</a></button>

    {{ include('bovinos/_delete_form.html.twig') }}
{% endblock %}
